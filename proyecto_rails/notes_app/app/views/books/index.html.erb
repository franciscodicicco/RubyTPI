<p id="notice"><%= notice %></p>

<h1>My Books</h1>

<table class="table table-hover table-bordered container">
  <thead>
    <tr>
      <th scope="col">Book ID</th>
      <th scope="col">Name</th>
      <th scope="col" colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.name %></td	>
        <td><%= link_to 'Show', [@user, book] %></td>
        <td><%= link_to 'Edit', edit_user_book_path(@user, book) %></td>
        <td><%= link_to 'Destroy', [@user, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Export Notes to HTML', user_book_export_notes_path(@user,book)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_user_book_path(@user) %>
<%= link_to 'Back', root_path %>
