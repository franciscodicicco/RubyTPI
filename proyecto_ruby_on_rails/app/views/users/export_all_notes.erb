<h1 class="mt-5">All notes in HTML</h1>
<hr>
<div class="container">
    <% @books.each do |book| %>
        <h4 style="color: blue"><%= book.name %></h4>
        <hr class="mt-4">
        <% book.notes.each do |note| %>
            <h4 style="color: red"><%= note.title %></h4>
            <%= markdown(note.content) %>
            <hr class="mt-4">
        <% end %>
    <% end %>
</div>

<%= link_to 'Back', root_path %>