<p id="notice"><%= notice %></p>

<h1>Book: <%= @book.name %> </h1>

<h2 style="color: green !important">List of Notes</h2>

<% if @book.notes.empty? %>
<h4>No notes yet!</h4>
<% end %>
<table class="table table-bordered container col-md-5">
<tbody>
  <% @book.notes.each do |note| %>
  <tr>
    <td><%= note.title %></td>
  </tr>
  <% end %>
</tbody>
</table>

<%= link_to 'See Notes Table', user_book_notes_path(@user, @book) %>
<br>
<br>

<%= link_to 'Edit', edit_user_book_path(@user, @book) %> |
<%= link_to 'Back', user_books_path %>
